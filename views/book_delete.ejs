<% include partials/header.ejs %>

<h1>Delete <%= book.title %></h1>

<% if (bookinstances.length) { %>
    <p><strong>Delete the following bookinstances before attempting to delete this book.</strong></p>

    <div style="margin-left:20px;margin-top:20px">
        <h4>Bookinstances</h4>

        <dl>
            <% bookinstances.forEach((instance) => { %>
                <dt><a href="<%= instance.url %>"><%= instance._id %></a></dt>
                <dd><%= instance.status %></dd>
            <% }) %>
        </dl>
    </div>
<% } else { %>
    <p>Do you really want to delete this Book?</p>
    <form action="" method="POST">
        <div class="form-group">
            <input id="id"
                   class="form-control"
                   type="hidden"
                   name="id"
                   required
                   value="<%= book._id %>">

            <button class="btn btn-primary" type="submit">Delete</button>
        </div>
    </form>
<% } %>
<% include ./partials/footer.ejs %>